.wrapper_with_padding
  .doc_show
    %h1.title= @doc.title
    %p.content= simple_format(@doc.content)
    %br

    .buttons
      = link_to "All Docs", docs_path, class: "button"
      = link_to "Fix path", edit_doc_path(@doc), class: "button"
      = link_to "Trash it", doc_path(@doc), method: :delete, data: { confirm: "Are you  sure?"}, class: "button"